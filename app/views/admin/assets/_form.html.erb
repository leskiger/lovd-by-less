<h2>Upload A Photo</h2>
<%= error_messages_for :asset %>

<% less_form_for @asset, :url => admin_page_asset_path(@page, @asset), :html => {:multipart=>true} do |f| %>
	<%= f.wrap(:image, :label => 'Photo: '){file_column_field "asset", "image", :size => 15} %>
	<%= f.text_field :title %>
	<%= f.text_area :caption %>

	<div class="row button">
  	<%= f.submit 'Upload Photo', :class=>"button" %>
	</div>
<% end %>